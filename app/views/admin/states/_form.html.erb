<%= simple_form_for [:admin, @state] , html: {class: 'form'} do |f| %>

  <section class='fields-wrapper one-column'>
    <header>
      <h2><%= "#{@state.persisted? ? 'Editar' : 'Criar'} Estado" %></h2>
    </header>
    
    <article>
      <%= f.input :name, wrapper_html: {class: 'col-12' } %>
    </article>
  </section>
  <footer>
    <%= cancel_action(path: admin_states_path) %>
    <%= submit_button f %>
  </footer>
<% end %>