<%= title_page "Regiões da Cidade #{@city.name}" %>

<%= add_resource 'Nova Região', new_admin_state_city_city_locale_path(@state, @city) %>

<table class='table-page'>
  <thead>
    <tr>
      <th>Código</th>
      <th>Região</th>
      <th>Criado em</th>
      <th>Sub-regiões</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <%= display_list_for(@city_locales, fields: 3) %>
  </tbody>
</table>

<%= will_paginate @city_locales %>
