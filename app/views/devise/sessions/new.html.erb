<section class='login admin'>
  <div class="mask"></div>
  <div class="container">

    <div class="wrapper-form">
      <h1>
        <%= link_to root_path do %>
          <%= image_tag 'loldesign_publisher/logo_white.svg' %>
        <% end %>
      </h1>

      <%= render partial: '/layouts/loldesign_publisher/modules/messages' %>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, label: 'salvar dados', as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Entrar", data: {disable_with: '...'} %>
        </div>
      <% end %>
    </div>
  </div>

  <%#= render "establishments/shared/links" %>
</section>
