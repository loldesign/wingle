<section id="second_step" class="question-container content">
  <%= form_tag({controller: "interest", action: "third"}, method: "post", id: "candidate_second") do %>
    <section class="content-box">
      <ul class="collection with-header">
        <li class="collection-header">
          <div class="progress ">
            <div class="determinate" style="width: 35%"></div>
          </div>

          <h5 class="center-align section">Qual seria o porte ideal de empresa para você?</h5>
        </li>

        <% @company_size.each do |company| %>
          <li class="collection-item">
            <p>
              <label>
                <%= radio_button_tag "candidate_interest[company_sizes][]", company.id, false, class: "with-gap" %>
                <span><%= company.name %>: <%= company.description %></span>
              </label>
            </p>
          </li>
        <% end %>
      </ul>
    </section>

    <section class="action-buttons-duo">
      <%= link_to "Anterior", candidate_interest_step_1_path, :class => "waves-effect waves-light btn-large grey lighten-2 black-text" %>
      <%= link_to "Próximo", 'javascript:void(0);', :class => "waves-effect waves-light btn-large", :onclick => "$('#candidate_second').submit()" %>
    </section>
  <% end %>
</section>