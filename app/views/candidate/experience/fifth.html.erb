<section id="fifth_step" class="question-container content">
  <%= form_tag({controller: "experience", action: "sixth"}, method: "post", id: "candidate_fifth") do %>
    <section class="content-box">
      <ul class="collection with-header">
        <li class="collection-header">
          <div class="progress ">
            <div class="determinate" style="width: 65%"></div>
          </div>

          <h5 class="center-align section">Qual foi seu tempo de experiência total nessas funções?</h5>
        </li>
        <% @function.each do |function| %>
          <li class="collection-item with-select">
            <p>
              <label>
                <span><%= function.name %></span>
              </label>
            </p>

            <%= hidden_field_tag("candidate_experience[candidate_experience_function][][function_id]", {}, value: function.id) %>
            <select name="candidate_experience[candidate_experience_function][][years]" id="" class="custom">
              <% for i in 0..10 %>
                <option value='<%= "#{i}" %>'><%= i == 1 ? "#{i} ANO" : "#{i} ANOS" %></option>
              <% end %>
            </select>
            <p><label>E</label></p>
            <select name="candidate_experience[candidate_experience_function][][months]" id="" class="custom">
              <% for i in 0..11 %>
                <option value='<%= "#{i}" %>'><%= i == 1 ? "#{i} MÊS" : "#{i} MESES" %></option>
              <% end %>
            </select>
          </li>
        <% end %>
      </ul>
    </section>

    <section class="action-buttons-duo">
      <%= link_to "Anterior", candidate_experience_step_4_path, :class => "waves-effect waves-light btn-large grey lighten-2 black-text" %>
      <%= link_to "Próximo", 'javascript:void(0);', class: "waves-effect waves-light btn-large", onclick: "$('#candidate_fifth').submit()" %>
    </section>
  <% end %>
</section>