<section id="fourth_step" class="question-container content experience-step" data-min="1" data-max="5">
  <div class="max-option-notice">
    <p class="gray bold">Limite máximo atingido</p>
  </div>
  <%= form_tag({controller: "experience", action: "fifth"}, method: "post", id: "candidate_fourth") do %>
    <section class="content-box">
      <ul class="collection with-header">
        <li class="collection-header">
          <div class="progress ">
            <div class="determinate" style="width: 50%"></div>
          </div>

          <h5 class="center-align section">Com o que?</h5>
        </li>
        <% @areas.each do |area| %>
          <li class="collection-item">
            <p>
              <label class="static-label light-green-text">
                <span>
                  <%= area.name %>
                </span>
              </label>
            </p>
          </li>
          <% area.functions.each do |function| %>
            <li class="collection-item list-function-area">
              <p>
                <label>
                  <%= check_box_tag "candidate_experience[functions][]", function.id, @candidate_experience.functions.include?(function.id) ? true : false, class: "with-gap" %>
                    <span>
                      <%= function.name %>
                    </span>
                </label>
              </p>
            </li>
          <% end %>
        <% end %>
      </ul>
    </section>

    <section class="action-buttons-duo">
      <%= link_to "Anterior", candidate_experience_step_3_path, :class => "waves-effect waves-light btn-large grey lighten-2 black-text" %>
      <%= link_to "Próximo", 'javascript:void(0);', :class => "waves-effect waves-light btn-large next-step #{@candidate_experience.functions.empty? ? 'disabled' : ''}", onclick: "$('#candidate_fourth').submit()" %>
    </section>
  <% end %>
</section>