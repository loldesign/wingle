<section id="third_step" class="question-container content">
  <section class="content-box">
    <ul class="collection with-header">
      <li class="collection-header">
        <div class="progress ">
          <div class="determinate" style="width: 50%"></div>
        </div>

        <h5 class="center-align section">Quais são os 5 setores onde você tem maior interesse?</h5>
      </li>
      
      <% @sector.each do |sector| %>
        <li class="collection-item">
          <p>
            <label>
              <input class="with-gap" name="group1" type="checkbox"  />
                <span>
                  <%= sector.name %><br>
                  <%= sector.description %>
                </span>
            </label>
          </p>
        </li>
      <% end %>
    </ul>
  </section>

  <section class="action-buttons-duo">
    <%= link_to "Anterior", candidate_step_2_path, :class => "waves-effect waves-light btn-large grey lighten-2 black-text" %>
    <%= link_to "Próximo", candidate_step_4_path, :class => "waves-effect waves-light btn-large" %>
  </section>
</section>