<section id="first_step" class="question-container content">
  <%= form_tag({controller: "education", action: "second"}, method: "post", id: "candidate_first") do %>
    <section class="content-box validate-radio-box">
      <ul class="collection with-header">
        <li class="collection-header">
          <div class="progress ">
            <div class="determinate" style="width: 20%"></div>
          </div>

          <h5 class="center-align section">Qual é o seu grau de instrução?</h5>
        </li>
        
        <% @education_list.each do |education| %>
          <li class="collection-item">
            <p>
              <label>
                <%= radio_button_tag "candidate_education[degree]", education.id, (@candidate_education.present? && @candidate_education.degree == education.id ? true : false), class: "with-gap validate" %>
                  <span>
                    <%= education.name %>
                  </span>
              </label>
            </p>
          </li>
        <% end %>
      </ul>
      <p class="radio-error-message hide">Favor preencher algum dos campos</p> 
    </section>

    <section class="action-buttons-duo">
      <%= link_to "Anterior", candidate_home_path, class: "waves-effect waves-light btn-large grey lighten-2 black-text" %>
      <%= link_to "Próximo", 'javascript:void(0);', class: "waves-effect waves-light btn-large radio-validate", id: "validate-form-button", data: {with_radios: 'true'} %>
    </section>
  <% end %>
</section>