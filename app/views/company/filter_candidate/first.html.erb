<section id="first_step" class="filter-container content">
  <section class="content-box">
    <ul class="collection with-header">
      <li class="collection-header">
        <div class="progress">
          <div class="determinate" style="width: 20%"></div>
        </div>
        <h5 class="center-align section"></h5>
      </li>

      <% @area.each do |area| %>
        <li class="collection-item">
          <%= link_to area.name, company_filter_step_2_path %>
        </li>
      <% end %>
    </ul>
  </section>

  <section class="action-buttons-single">
    <%= link_to "Anterior", company_home_path, class: "waves-effect waves-light btn-large" %>
  </section>
</section>
