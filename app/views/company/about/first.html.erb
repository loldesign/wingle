<section id="first_step" class="question-container content">
  <%= form_tag({controller: "about", action: "second"}, method: "post", id: "company_first") do %>
    <section class="content-box">
      <ul class="collection with-header">
        <li class="collection-header">
          <div class="progress ">
            <div class="determinate" style="width: 25%"></div>
          </div>

          <h5 class="center-align section">Qual é o momento da sua empresa?</h5>
        </li>

        <% @company_size.each do |company| %>
          <li class="collection-item">
            <p>
              <label>
                <%= radio_button_tag "company_about[company_size_id]", company.id, false, class: "with-gap" %>
                <span><%= company.name %></span>
              </label>
            </p>
          </li>
        <% end %>
      </ul>
    </section>

    <section class="action-buttons-duo">
      <%= link_to "Anterior", company_terms_path, :class => "waves-effect waves-light btn-large grey lighten-2 black-text" %>
      <%= link_to "Próximo", 'javascript:void(0);', :class => "waves-effect waves-light btn-large", :onclick => "$('#company_first').submit()" %>
    </section>
  <% end %>
</section>