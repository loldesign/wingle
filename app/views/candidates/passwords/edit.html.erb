<section id="reset_password" class="content">
  <div class="cloud-bg">
    <p class="bold medium-gray">
      Nova senha
    </p>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), defaults: {label: false}, html: { method: :put }) do |f| %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, placeholder: "Nova senha", required: true, autofocus: true, hint: ("mÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length) %>
      <%= f.input :password_confirmation, placeholder: "Confirmar nova senha", required: true %>
    </div>

    <section class="form-actions action-buttons-single">
      <%= link_to "ALTERAR", 'javascript:void(0);', :class => 'waves-effect waves-light btn-default green-default bold', :onclick => "$('#new_candidate').submit()" %>
    </section>
  <% end %>

</section>
